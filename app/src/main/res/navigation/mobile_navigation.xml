<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.proyectoandres.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.proyectoandres.ui.pets.PetsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_pets"
        >
        <argument

            android:name="privacyPolicyLink"
            app:argType="string"
            android:defaultValue="http://sohamerp.com/avo/avo_privacy_policy.html"/>
    </fragment>


    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.proyectoandres.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_options"
        android:name="com.example.proyectoandres.ui.options.OptionsFragment"
        android:label="@string/title_options"
        tools:layout="@layout/fragment_options" />
</navigation>