<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionarDiaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:clickable="false"
                android:focusable="false"
                android:hint="selecciona el dia"
                android:minHeight="48dp"
                android:onClick="selecDate"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtprueba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="txtprueba"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/bt1011"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CACACA"
                android:text="10 : 00 - 11 : 00"
                android:enabled="false"
                android:onClick="agregarNotificacion"
                />

            <Button
                android:id="@+id/bt1112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 : 00 - 12 : 00"
                android:background="#CACACA"
                android:enabled="false"
                android:onClick="agregarNotificacion"/>

            <Button
                android:id="@+id/bt1314"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 : 00 - 14 : 00"
                android:background="#CACACA"
                android:enabled="false"
                android:onClick="agregarNotificacion"/>

            <Button
                android:id="@+id/bt1718"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 : 00 - 18 : 00"
                android:background="#CACACA"
                android:enabled="false"
                android:onClick="agregarNotificacion"/>

            <Button
                android:id="@+id/bt1819"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 : 00 - 19 : 00"
                android:background="#CACACA"
                android:enabled="false"
                android:onClick="agregarNotificacion"/>

            <Button
                android:id="@+id/bt1920"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 : 00 - 20 : 00"
                android:background="#CACACA"
                android:enabled="false"
                android:onClick="agregarNotificacion"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etcomentarioCita"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Agrega el asunto de la cita"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>